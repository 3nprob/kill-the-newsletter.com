kill-the-newsletter.com {
  redir https://www.kill-the-newsletter.com{uri}
}

www.kill-the-newsletter.com {
  rewrite {
    if {path} is /
    to /kill-the-newsletter{uri}
  }
  proxy /kill-the-newsletter localhost:8080 {
    without /kill-the-newsletter
  }
  git https://github.com/leafac/kill-the-newsletter.git {
    hook /deploy
    then systemctl restart kill-the-newsletter
  }
}
