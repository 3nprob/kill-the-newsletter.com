kill-the-newsletter.com {
  redir https://www.kill-the-newsletter.com{uri}
}

www.kill-the-newsletter.com {
  rewrite {
    if {path} is /
    to /proxy{uri}
  }
  proxy /proxy localhost:8080 {
    without /proxy
  }
  rewrite / /public{path}
  git github.com/leafac/kill-the-newsletter {
    hook /deploy MY-SECRET
    then bash -c "killall kill-the-newsletter || true"
    then_long env GOPATH=/root/go/packages /root/go/bin/go run kill-the-newsletter.go
  }
}
