[Unit]
Description=Exim

[Service]
User=root
Environment=PATH=/home/leafac/.rbenv/shims:/home/leafac/.rbenv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
WorkingDirectory=/home/leafac/kill-the-newsletter
ExecStart=/usr/sbin/exim -C /home/leafac/kill-the-newsletter/config/exim/exim.production.conf -bdf -q30m
LimitNOFILE=8192
Restart=always
RestartSec=120
StartLimitInterval=5
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
